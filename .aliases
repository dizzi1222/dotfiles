alias sdn="shutdown now"

alias c="clear"

alias ls="ls -a -l --color=auto"
alias ...="cd ../../"
alias ....="cd ../../../"
alias .....="cd ../../../../"
alias dev="cd ~/Documents/Programming"
alias qtc="cd ~/.config/qtile"
alias vic="cd ~/.config/nvim"

alias grep="grep -i -r --color=auto"

alias visudo="sudo EDITOR=nvim visudo"
alias cat='ccat -G Plaintext="white" -G Keyword="purple" -G String="darkgreen" -G Punctuation="brown" -G Comment="faint"'

alias mongodb="mongod --port 27017 --dbpath ~/Documents/database"
alias tb="taskbook"

alias clearos="sudo pacman -Scc && sudo rm -rf ~/.cache ~/.xsession-error ~/.xsession-error.old ~/.histfile"
alias de="setxkbmap de deadtilde"
alias us="setxkbmap us intl"
