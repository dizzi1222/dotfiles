[module/separator]
type = custom/text
content = " "
content-padding = 4


[module/separator1]
type = custom/text
content = " "
content-padding = 3


[module/checkupdates]
type = custom/script
exec = ~/.config/leftwm/themes/current/scripts/checkupdates.sh
interval = 120
format-prefix = 
format-prefix-padding-right = 2
format-prefix-font = 1
format-prefix-foreground = #1793D1
label = "%output%"


[module/datetime]
type = internal/date
date = %a %b %d %R:%S %p
label = %date%
label-padding-right = 1
format-prefix = 
format-prefix-font = 2
format-prefix-padding-right = 2
format-prefix-padding-left = 1
format-prefix-foreground = #458588


[module/battery]
type = custom/script
exec = ~/.config/leftwm/themes/current/scripts/battery.py
interval = 15
label = "%output%%"
format-prefix = ""
format-prefix-font = 1
format-prefix-padding = 1
format-prefix-foreground = #769A70


[module/backlight]
type = internal/backlight
use-actual-brightness = true
enable-scroll = true
format = <ramp> <label>
label = %percentage%%
label-foreground = ${color.foreground}
ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑
ramp-foreground = #fadb2f


[module/download]
type = internal/network
interface = enp0s3
interval = 0.5
accumulate-stats = true
format-connected-prefix = ﰭ
format-connected-prefix-font = 1
format-connected-prefix-padding-right = 1
format-connected-prefix-foreground = #458588
label-connected-padding = 1
label-connected-font = 1
label-connected = "%downspeed:8%"
label-connected-foreground = ${colors.foreground}


[module/upload]
type = internal/network
interface = enp0s3
interval = 0.5
accumulate-stats = true
format-connected-prefix = ﰶ
format-connected-prefix-font = 1
format-connected-prefix-padding-right = 1
format-connected-prefix-padding-left = 2
format-connected-prefix-foreground = #b16286
label-connected-padding = 1
label-connected-font = 1
label-connected-foreground = ${colors.foreground}
label-connected = %upspeed:8%
format-margin-left = 5


[module/ping]
type = custom/script
exec = ~/.config/leftwm/themes/current/scripts/ping.sh
format-prefix-foreground = #E86862
format-prefix =  
interval = 0.5
format-prefix-padding = 1
label = %output:6%
label-font = 1
label-padding = 1
format-prefix-font = 1


[module/weather]
type = custom/script
exec = ~/.config/leftwm/themes/current/scripts/weather.sh
exec-if = ping openweathermap.org -c 1
interval = 600
label-font = 1
label-foreground = ${colors.foreground}
format-prefix = 
format-prefix-foreground = #1793D1
format-prefix-padding = 1
format-prefix-font = 3
