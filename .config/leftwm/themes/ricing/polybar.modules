######  List of available modules ######
;; arch-updates
;; battery
;; cpu
;; cpu-graph
;; date
;; ewmh
;; layout
;; layout0
;; layout1
;; launcher
;; mem
;; mem-graph
;; powermenu
;; pulseaudio
;; pulseaudio-control
;; spacer
;; spacer-dot
;; temperature
;; wlan
;; workspace0
;; workspace1


######  Modules ######


[module/date]
type = internal/date
interval = 1.0
time = %H:%M
time-alt = %B %d, %Y
format = <label>
label = %time%
format-prefix = " "
format-prefix-foreground = ${color.indigo}


[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t "$SCRIPTPATH/polybar.liquid"
tail = true


[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t "$SCRIPTPATH/polybar.liquid"
tail = true


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = 
format-prefix-padding = 1
format-prefix-font = 5
; format-prefix-foreground = ${color.teal}
format-prefix-foreground = #83A598
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
; format-prefix = 
format-prefix = 
format-prefix-padding = 1
format-prefix-font = 5
format-prefix-foreground = #E86862
label = %percentage_used%%


[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
format-volume-background = ${color.background}
format-volume-foreground = #D3869B
label-volume = %percentage%%
label-volume-foreground = ${color.foreground}
label-muted =   muted
label-muted-foreground = #888
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
click-right = pavucontrol


[module/application-menu]
type = custom/text
content = " "
content-foreground = ${color.cyan}
click-left = rofi -modi drun -show drun
click-middle = rofi -modi drun -show drun
click-right = alacritty


[module/sysmenu]
type = custom/text
content = ""
content-foreground = ${color.pink}
click-left = archlinux-logout
click-right = archlinux-logout


[module/spotify]
type = custom/script
interval = 1
exec = $HOME/.config/leftwm/themes/current/scripts/spotify.py -f '{artist} - {song}' | awk '{print toupper($0)}'
format = <label>
format-prefix = 
format-prefix-padding-right = 2
; format-foreground = ${colors.color4}
format-prefix-foreground = #D3869B
label = %output%
label-maxlen = 45
click-right = bspc desktop -f '^3'
click-left = playerctl -p spotify play-pause
scroll-up = playerctl -p spotify next
scroll-down = playerctl -p spotify previous


; [module/player]
; type = custom/script
; exec = echo "$(cat $XDG_CACHE_HOME/current_player)"
; format = <label> ://
; interval = 1
; label-font = 1
